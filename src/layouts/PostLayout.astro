---
import Layout from "./Layout.astro";
import PageHeader from '../components/PageHeader.astro';
const { frontmatter } = Astro.props;
---
<Layout title={frontmatter.title}>
	<section>
		<header>
			<PageHeader>
				{frontmatter.title}
				<div slot="text">
					<p>{frontmatter.description}</p>
					<p class="text-xs md:text-sm">Published on <time datetime={frontmatter.pubDate.slice(0,10)}>{frontmatter.pubDate.slice(0,10)}</time></p>
				</div>
			</PageHeader>
		</header>	
		<div class="prose prose-sm md:prose-2xl">
			<slot />
		</div>
	</section>	
</Layout>